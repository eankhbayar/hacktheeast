PORT=3000
AWS_REGION=us-east-1

# Auth (required for auth endpoints)
JWT_SECRET=your_jwt_secret
JWT_REFRESH_SECRET=your_jwt_refresh_secret

# DynamoDB
DYNAMODB_TABLE_NAME=hacktheeast-users
# Only for local dev with DynamoDB Local:
# DYNAMODB_ENDPOINT=http://localhost:8000

# Agent (Bedrock AgentCore)
# For local dev: run `agentcore dev` in the agent/ directory, then set:
AGENT_LOCAL_URL=http://localhost:8080
# For production: set the deployed AgentCore runtime ARN instead:
# AGENT_RUNTIME_ARN=arn:aws:bedrock-agentcore:us-east-1:123456789012:runtime/your-runtime-id

# AWS credentials (not needed on EC2 when using IAM instance profile)
# AWS_ACCESS_KEY_ID=your_key
# AWS_SECRET_ACCESS_KEY=your_secret
